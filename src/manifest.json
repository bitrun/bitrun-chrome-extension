{
  "manifest_version": 2,
  "name": "BitRun",
  "author": "Dan Sosedoff",
  "description": "Execute Github Gists",
  "version": "1.2.2",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gist.github.com/*"
      ],
      "js": [
        "jquery.min.js",
        "ansi_up.js",
        "main.js"
      ],
      "css": [
        "main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "19": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "96": "logo.png",
    "128": "logo.png"
  },
  "browser_action": {
    "default_title": "Execute code snippets",
    "default_icon": "logo.png"
  }
}